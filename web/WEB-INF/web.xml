<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">



    <servlet>
        <servlet-name>findTrackServlet</servlet-name>
        <servlet-class>kz.bgm.platform.web.api.FindTrackServletJson</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findServlet</servlet-name>
        <servlet-class>kz.bgm.platform.web.action.SearchTrackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>uploadReportMobileServet</servlet-name>
        <servlet-class>kz.bgm.platform.web.action.UploadReportMobileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>uploadReportPublicServlet</servlet-name>
        <servlet-class>kz.bgm.platform.web.action.UploadReportPublicServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>processReportServlet</servlet-name>
        <servlet-class>kz.bgm.platform.web.action.ProcessReportServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>kz.bgm.platform.web.action.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dispatcherServlet</servlet-name>
        <servlet-class>kz.bgm.platform.web.DispatcherServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>findTrackServlet</servlet-name>
        <url-pattern>/find-track</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findServlet</servlet-name>
        <url-pattern>/finder</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>uploadReportMobileServet</servlet-name>
        <url-pattern>/upload-mobile-report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uploadReportPublicServlet</servlet-name>
        <url-pattern>/upload-public-report</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>processReportServlet</servlet-name>
        <url-pattern>/report-calculator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/authorize</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>/view/*</url-pattern>
    </servlet-mapping>


</web-app>
